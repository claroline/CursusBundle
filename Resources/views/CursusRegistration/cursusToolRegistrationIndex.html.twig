    <script type="text/javascript" src="{{ asset('bundles/clarolinecursus/js/Registration/Controller/CursusRegistrationManagementCtrl.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecursus/js/Registration/Controller/CursusGroupUnregistrationModalCtrl.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecursus/js/Registration/Controller/CursusGroupsListRegistrationModalCtrl.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecursus/js/Registration/Controller/CursusUserUnregistrationModalCtrl.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecursus/js/Registration/Controller/CursusUsersListRegistrationModalCtrl.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecursus/js/Registration/Directive/CursusRegistrationListDirective.js') }}"></script>
